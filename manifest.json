{
    "manifest_version" : 2,
    "name" : "GMCS CRM",
    "description" : "Расширения для CRM",
    "version" : "1.0",
	"web_accessible_resources": ["ui/popup.html", "/*"],
    "browser_action": {
        "default_title" : "GMCS CRM",
        "default_icon" : "img/icon.png"
    },
	"background": {
	    "persistent": false,
	    "scripts":["js/background.js", "js/content-script.js"]
	},
	"permissions": [
	"tabs" 
  ],
	"content_scripts": [ {
      "js": [ "js/content-script.js", "js/inject.js", "js/inject2.js"],
	  "matches": [ "\u003Call_urls>", "http://*/*, https://*/*" ],
      "run_at": "document_end"
   } ],
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
   
}
